@model HomeBudgetManagement.MVC.Core.Models.AccountViewModel

@{
    ViewData["Title"] = "Account";
}

<h1>Account</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" name="Id"  value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" name="Balance" value="@Model.Balance"/>
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BalanceToAdd" class="control-label"></label>
                <input asp-for="BalanceToAdd" class="form-control" name="BalanceToAdd" value="0"/>
                <span asp-validation-for="BalanceToAdd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

